<%= render "layouts/header", obj: @artist %>

<h2><%= @artist.name %></h2>
<%= link_to "edit", edit_artist_url(@artist) %>
<%= link_to "delete(!)", artist_url(@artist), method: :delete %>

<h3>Albums</h3>
<ul>
	<% @artist.albums.each do |a| %>
		<li>
			<%= link_to a.name, album_url(a) %>
			<%= link_to "edit", edit_album_url(a) %>
			<%= link_to "delete(!)", album_url(a), method: :delete %>
		</li>
	<% end %>
	<li style="list-style-type: none; text-indent: -1em;">
		<%= link_to "new", new_artist_album_url(@artist) %>
	</li>
</ul>
