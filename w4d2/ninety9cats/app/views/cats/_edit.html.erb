<% action_path = @cat.persisted? ? cat_url(@cat) : '/cats' %>
<% meth = @cat.persisted? ? 'PATCH' : 'POST' %>

<form action= "<%= action_path %>" method="post">
  <input name="_method" value="<%= meth %>" hidden>

  <label for="cat_name">Name</label>
  <input name="cat[name]" id ="cat_name" type="text"
         value="<%= @cat.name || '' %>">
  <br>

  <label for="birth_date">Birthdate</label>
  <input name="cat[birth_date]" id="birth_date" type="date"
         value="<%= @cat.birth_date || '' %>">
  <br>

  <label for="cat_sex_m">Male</label>
  <input name="cat[sex]" id = "cat_sex_m" type="radio" value="M"
         <%= @cat.sex == 'M' ? 'checked' : '' %>>
  <label for="cat_sex_f">Female</label>
  <input name="cat[sex]" id = "cat_sex_f" type="radio" value="F"
         <%= @cat.sex == 'F' ? 'checked' : '' %>>
  <br>

  <label>Color</label>
  <select name="cat[color]">
    <option selected>
    <% Cat::COLORS.each do |color| %>
      <option value="<%= color %>" <%= @cat.color == color ? 'selected' : '' %>>
        <%= color.capitalize %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="description">Description</label>
  <br>
  <textarea name="cat[description]" id="description"><%= @cat.description || '' %></textarea>
  <br>

  <input type="submit" value="submit">
</form>
