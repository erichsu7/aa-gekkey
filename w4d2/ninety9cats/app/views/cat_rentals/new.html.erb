<% if flash[:error] %>
  <%= flash[:error] %>
  <%  flash[:error] = nil %>
<% end %>


<h1>New Cat Rental Request</h1>

<form action= "/cat_rentals" method="post">

  <label>Cat Selection</label>
  <select name="cat_rental[cat_id]">
    <option selected>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id  %>" <%= @cat_rental.cat_id == cat.id ? 'selected' : '' %>>
        <%= cat.name.capitalize %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="start_date">start_date</label>
  <input name="cat_rental[start_date]" id="start_date" type="date"
         value="<%= @cat_rental.start_date || '' %>">
  <br>

  <label for="end_date">end_date</label>
  <input name="cat_rental[end_date]" id="end_date" type="date"
         value="<%= @cat_rental.end_date || '' %>">
  <br>

  <input type="submit" value="submit">

</form>
